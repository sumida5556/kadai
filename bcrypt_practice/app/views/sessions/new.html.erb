<h1>Login</h1>
<%= form_with url: session_path, method: :post, local: true do |form| %>
  <% if flash[:alert] %>
    <div>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'Log In' %>
  </div>
<% end %>